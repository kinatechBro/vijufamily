# Production Environment Variables for WordPress Integration

# WordPress REST API Configuration
VITE_WP_API_URL=https://your-wordpress-site.com/wp-json/wp/v2
VITE_WP_SITE_URL=https://your-wordpress-site.com
VITE_WP_ADMIN_URL=https://your-wordpress-site.com/wp-admin

# API Configuration
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3

# Development Configuration
VITE_ENABLE_DEVTOOLS=false
VITE_LOG_LEVEL=error

# Contact Form Configuration
VITE_CONTACT_FORM_ID=1
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# Analytics and Monitoring
VITE_GA_TRACKING_ID=your_google_analytics_id
VITE_SENTRY_DSN=your_sentry_dsn

# Build Configuration
VITE_BUILD_MODE=production
VITE_ENABLE_SOURCE_MAPS=false